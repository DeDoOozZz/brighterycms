<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.job_type}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }} 
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">{{ lang.name }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="{{ lang.name }}" name="name"
                       value="{{ helper.form.value('name', item.name) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="var_name">{{ lang.var_name }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="var_name" placeholder="{{ lang.var_name }}" name="var_name"
                       value="{{ helper.form.value('var_name', item.var_name) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="image">{{ lang.color }}</label>
            <div class="col-sm-10">
                <input type="color" class="form-control" id="color" placeholder="{{lang.color}}" name="color" value="{{ helper.form.value('color', item.color) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/classfied_types/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
