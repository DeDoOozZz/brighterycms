<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.classfied_areas }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" id="classfied_areas" class="form-horizontal"') }}
        {{ error }}<div class="form-group">
            <label class="col-sm-2 control-label" for="name">{{ lang.name }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control validate[required]" id="name" placeholder="{{ lang.name }}" name="name" value="{{ helper.form.value('name', item.name) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                 <a href="{{ helper.uri.url('management/classfied_areas/index', city_id ) }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>