<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.users }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" id="user" class="form-horizontal"') }}
        {{ error }}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="fullname">{{ lang.fullname }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="fullname" placeholder="{{ lang.fullname }}" name="fullname"
                       value="{{ helper.form.value('fullname', item.fullname) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="clinic_specification_id">{{ lang.usergroup }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('usergroup_id', usergroup, helper.form.value('usergroup_id', item.usergroup_id), 'class="form-control select2 "') }}
            </div>
        </div>
        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="image">{{ lang.image }}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="image" placeholder="{{ lang.image }}" name="image"></div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="email">{{ lang.email }}</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" placeholder="{{ lang.email }}" name="email"
                       value="{{ helper.form.value('email', item.email) }}">
            </div>
        </div> 

        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="password">{{lang.password}}</label>

            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" placeholder="{{lang.password}}" name="password"
                       value="{{ helper.form.value('password') }}">
            </div>
        </div>

        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="phone">{{lang.phone}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="phone" placeholder="{{lang.phone}}" name="phone"
                       value="{{ helper.form.value('phone', phone.phone) }}">
            </div>
        </div>


        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="gender">{{ lang.gender }}</label>
            <div class="col-sm-10">
                <div class="input-group col-sm-12">
                    {{ helper.form.dropdown('gender', menu, helper.form.value('gender', item.gender), 'class="form-control select2"') }}
                </div>
            </div>
        </div>

        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/users/index') }}" class="btn btn-danger cancel-button">Cancel</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
