<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.blog_categories }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }} 
        <div class="form-group">
            <label class="col-sm-2 control-label" for="parent">{{ lang.parent }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('parent', categories, helper.form.value('parent',item.parent), 'class="form-control " id="s2example-1" ') }}

            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="title">{{ lang.title }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" placeholder="{{ lang.title }}" name="title"
                       value="{{ helper.form.value('title', item.title) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="seo">{{ lang.seo }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="address" placeholder="{{ lang.seo}}" name="seo"
                       value="{{ helper.form.value('seo', item.seo) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="description">{{lang.description}}</label>
            <div class="col-sm-10">
                <textarea  class="form-control" id="description" placeholder="{{lang.description}}" name="description" >{{ helper.form.value('description', item.description) }}</textarea>
            </div>
        </div> 
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="image">{{ lang.image }}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="image" placeholder="{{ lang.image }}" name="image">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="sort">{{ lang.sort }}</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="sort" placeholder="{{lang.sort }}" name="sort"
                       value="{{ helper.form.value('sort', item.sort) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>
        
          <div class="form-group">
            <label class="col-sm-2 control-label" for="language_id">{{ lang.language_id }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="language_id" placeholder="{{ lang.language_id }}" name="language_id"
                       value="{{ helper.form.value('language_id', item.language_id) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/blog_categories/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
