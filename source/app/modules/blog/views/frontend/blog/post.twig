<section class="blog-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-box">
                    <div class="blog-post single-post">
                        <img src="{{helper.uri.cdn('blog', item.image )}}" alt="">
                        <div class="post-content-text">
                            <h1>{{item.title}}</h1> 
                            <span>{{ item.created|date("d F Y")}}</span> <br>
                            {{item.content}}
                        </div>
                    </div>
                    <div class="comment-section">
                        <h2>{{comments_no}} Comments</h2>
                        <ul class="comment-tree">
                            {% for comment in comments %}
                                <li>
                                    <div class="comment-box">
                                        <img alt="" src="{{helper.uri.cdn_image('users', comment.image )}}">
                                        <div class="comment-content">
                                            <h4>{{comment.name}}</h4>
                                            <span>{{ comment.created|date("d F Y")}}</span>
                                            <br>
                                            {{comment.comment}}
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                        {{ helper.form.open(null,false,false,'role="form" class="comment-form"') }}
                            {{ error }}
                            <h2>{{lang.leave_comment}}</h2>
                            {% if not user %}
                            <input name="name" id="name" type="text" placeholder="{{lang.name}}" value="{{ helper.form.value('name') }}">
                            <input name="email" id="email" type="text" placeholder="{{lang.email}}" value="{{ helper.form.value('email') }}">
                            {% endif %}
                            <textarea name="comment" id="comment" placeholder="{{lang.comment}}"></textarea>
                            <input type="submit" value="{{lang.leave_comment}}">
                        {{ helper.form.close() }}
                    </div>
                </div>

            </div>
            <div class="col-md-4">
                <div class="sidebar">

                    <div class="category-widget widget">
                        <h2>Categories</h2>
                        <ul class="category-list">
                            {% for item in categories %}
                               <li><a href="{{ helper.uri.url('blog/index', item.seo) }}">{{item.title}}</a></li>  
                            {% endfor %}
                        </ul>
                    </div>

