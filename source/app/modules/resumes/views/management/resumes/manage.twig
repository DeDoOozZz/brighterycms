                <div class="form-group">
                    <label class="col-sm-2 control-label">{{lang.nationality}}</label>
                    <div class="col-sm-10">
                        {{ helper.form.dropdown('nationality_id', item_Nationality, helper.form.value('nationality_id', item_personal.nationality_id), 'class="form-control select2 " ') }}
                    </div>
                </div>

                <div class="form-group-separator"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{lang.marital_status}}</label>
                    <div class="col-sm-10">
                        {{ helper.form.dropdown('marital_status_id', item_Martial, helper.form.value('marital_status_id', item_personal.marital_status_id), 'class="form-control select2" ') }}
                    </div>
                </div>

                <div class="form-group-separator"></div>

                <div class="col-sm-10">
                    <input type="submit" class="btn btn-secondary ">
                </div>
            </div>
        </div>
    </div>
    {{helper.form.close}}
</div>
