                <div class="form-group">
                    <label class="col-sm-2 control-label" for="date_of_birth">{{lang.date_of_birth}}</label>
                    <div class="col-sm-10">
                        <input type="text" data-format="yyyy-mm-dd" class="form-control datepicker"
                               id="date_of_birth" placeholder="{{ item_personal.date_of_birth }}"
                               name="date_of_birth"
                               value="{{ helper.form.value('date_of_birth', item_personal.date_of_birth)}}">
                    </div>
                </div>
                <input type="hidden" value="{{item_personal.resume_id}}" name='resume_id'>
