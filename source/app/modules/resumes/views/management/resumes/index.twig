<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{lang.resumes}}</h3>

        <div class="panel-options">
            <a href="{{ helper.uri.url('management/resumes/manage') }}" class="btn btn-secondary" style="color: #FFF;">
                {{lang.add}}
            </a>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-striped" id="datatable">
            <thead>
                <tr>
                    <th>{{lang.language_id}}</th>
                    <th>{{lang.user_id}}</th>
                    <th>{{lang.date_of_birth}}</th>
                    <th>{{lang.nationality}}</th>
                    <th>{{lang.marital_status}}</th>
                    <th>{{lang.created}}</th>
                    <th>{{lang.operations}}</th>
                </tr>
            </thead>
            <tbody class="middle-align">

                {% for item in items %}
                    <tr>
                        <td>{{ item.language_id }}</td>
                        <td>{{item.user_id}}</td>
                        <td>{{item.date_of_birth}}</td>
                        <td>{{item.nationality_id}}</td>
                        <td>{{item.marital_status_id}}</td>
                        <td>{{item.created}}</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="{{ helper.uri.url('management/resumes/manage', item.resume_id ) }}">{{lang.edit}}</a>
                            <a href="#" class="btn btn-secondary btn-sm delete_msg" data-url_id="{{helper.uri.url('management/resumes/delete', item.resume_id)}}" data-toggle="modal" data-target="#deleteMsg" style="color:#fff;">{{lang.delete}}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</div>
<div class="modal fade" id="deleteMsg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{{lang.system_msg}}</h4>
            </div>
            <div class="modal-body">
                <a>{{lang.delete_item}}</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">{{ lang.no }}</button>
                <a id="delete_id" class="btn btn-danger" href="url">{{lang.delete}}</a>
            </div>
        </div>
    </div>
</div>
