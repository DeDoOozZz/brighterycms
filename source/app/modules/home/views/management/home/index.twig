<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.default_home_page }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,false,'role="form" id="setting" class="form-horizontal"') }}
        {{ error }}

        <div class="form-group">
            <label class="col-sm-2 control-label">{{ lang.default_home_page }}</label>

            <div class="col-sm-10">
                {{ helper.form.dropdown('default_home_page', home_pages, helper.form.value('default_home_page', setting.default_home_page), 'class="form-control"') }}
            </div>
        </div>

        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/settings/index') }}"
                   class="btn btn-danger cancel-button">{{ lang.cancel }}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{ lang.submit }}</button>
            </div>
        </div>
        {{ helper.form.close() }}
    </div>
</div>