<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{lang.page_details}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,false,'role="form" id="page" class="form-horizontal"') }}
        {{ error }}

        <div class="form-group">
            <label class="col-sm-2 control-label" for="title">{{lang.title}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control validate[required]" id="title" placeholder="{{lang.title}}" name="title"
                       value="{{ helper.form.value('title', item.title) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="seo">{{lang.seo}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control validate[required]" id="seo" placeholder="{{lang.seo}}" name="seo" value="{{ helper.form.value('seo', item.seo) }}">
            </div>
        </div>

        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="content">{{lang.content}}</label>

            <div class="col-sm-10">
                <textarea class="form-control ckeditor validate[required]" rows="8" name="content" id="content" placeholder="{{lang.content}}">{{ helper.form.value('content', item.content) }}</textarea>
            </div>
        </div>


        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="news_category_id">{{lang.category}}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('news_category_id', data.news_categories, helper.form.value('news_category_id', item.news_category_id), 'class="form-control select2" id="news_category_id"') }}
            </div>
        </div>

        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <input type="submit" class="btn btn-secondary">{#{{ lang.submit }}</button>#}
            </div>
        </div>
        {{ helper.form.close() }}
    </div>
</div>



