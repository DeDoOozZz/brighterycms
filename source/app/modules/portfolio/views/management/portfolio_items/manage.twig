<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.portfolio }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" id="portfolio" class="form-horizontal"') }}
        {{ error }}
         <div class="form-group">
            <label class="col-sm-2 control-label" for="category">{{ lang.category }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('portfolio_category_id', blog_category, helper.form.value('portfolio_category_id', item.portfolio_category_id), 'class="form-control select2"') }}
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="title">{{ lang.title }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" placeholder="{{ lang.title }}" name="title" value="{{ helper.form.value('title', item.title) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="seo">{{ lang.seo }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control " id="seo" placeholder="{{ lang.seo }}" name="seo" value="{{ helper.form.value('seo', item.seo) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="image">{{ lang.image }}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="image" placeholder="{{ lang.image }}" name="image" value="{{ helper.form.value('image', item.image) }}"></div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="description">{{ lang.description }}</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="description" placeholder="{{ lang.description }}" name="description">{{ helper.form.value('description', item.description) }}</textarea>
            </div>
        </div>
        <div class="form-group-separator"></div> <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/portfolio_items/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>