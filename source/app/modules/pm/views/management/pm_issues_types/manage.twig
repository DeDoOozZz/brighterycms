<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{lang.types}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="title">{{lang.title}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" placeholder="{{lang.title}}" name="title" value="{{item.title}}">
            </div>
        </div>
        <div class="form-group-separator"></div> 
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-secondary">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}
    </div>
</div>
<script type ="text/javascript">
    $('.datepicker').datepicker({
        format: 'yyyy/mm/dd',
        startDate: '-3d'
    })
</script>