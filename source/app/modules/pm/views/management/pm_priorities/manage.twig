<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{lang.priorities}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }}

        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">{{lang.name}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="{{lang.name}}" name="name" value="{{ helper.form.value('name', item.name) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div><div class="form-group">
            <label class="col-sm-2 control-label" for="color">{{ lang.color }}</label>
            <div class="col-sm-10">
                <input type="color" class="form-control" id="color" placeholder="{{lang.color}}" name="color" value="{{ helper.form.value('color', item.color) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div> <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <button type="submit" class="btn btn-secondary">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
