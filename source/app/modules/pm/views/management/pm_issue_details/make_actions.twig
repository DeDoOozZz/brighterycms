<div class="modal-content">

    <div class="modal-header">
        <h4 class="modal-title">
            <span><strong>{{ issue.title }}</strong></span> {{ lang.actions }}
        </h4>
    </div>


    <div class="modal-body">

        <div class="panel-body">
            {{ helper.form.open(null,false,true,'role="form" class="form-horizontal" id="RepuInfra"') }}
            {{ error }}

            <div class="form-group">
                <label class="col-sm-2 control-label" for="name">{{ lang.actions }}</label>
                <div class="col-sm-10">
                    <ul class="icheck-list">
                        <li>
                            <input class="icheck-11" type="radio" id="minimal-radio-1-11" name="type" value="reputations"  checked >
                            <label for="minimal-radio-1-11">{{ lang.reputation }}</label>
                        </li>
                        <li>
                            <input tabindex="8" class="icheck-11" type="radio" id="minimal-radio-2-11" name="type"  value="infractions">
                            <label for="minimal-radio-2-11">{{ lang.infraction }}</label>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="form-group-separator"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="reason">{{ lang.reason }}</label>
                <div class="col-sm-10">
                    <textarea class="form-control" cols="5" id="reason" name="reason"></textarea>
                </div>
            </div>
             </div>
            {{ helper.form.close() }}

        </div>



    <div class="modal-footer">
        <button type="button" class="btn btn-info" id="submit_id" data-dismiss="modal" >{{ lang.submit }}</button>
    </div>
</div>



<!-- Imported styles on this page -->
<link rel="stylesheet" href="{{ constant('STYLE_CSS') }}/icheck/skins/all.css">
<!-- Imported scripts on this page -->
<script src="{{ constant('STYLE_JS') }}/icheck/icheck.min.js"></script>

<script type="text/javascript">
    $('#RepuInfra').click(function() {
        $.post(site_url + '/management/pm_issue_details/operations/{{ item.pm_issue_id }}', $('#submit_id').serialize(), function (response) {
            response = $.parseJSON(response);
        });
    });

</script>