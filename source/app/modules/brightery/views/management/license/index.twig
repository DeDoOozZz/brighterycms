<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.licenses }}</h3>

        <div class="panel-options">
            <a href="{{ helper.uri.url('management/brightery_licenses/manage') }}" class="btn btn-secondary" style="color: #FFF;">
                {{ lang.add }}
            </a>
        </div>
    </div>
    {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
    {{ error }}
    <br>
    {{ lang.license_code }}
    <input type="text" class="form-control" id="url" placeholder="{{ lang.license_code }}" value="{{item.license_code}}" name="license_code_search" > 
    <br>
    {{ lang.product_title }}
    {{ helper.form.dropdown('brightery_product_id', product_name, helper.form.value('brightery_product_id', item.brightery_product_id), 'class="form-control select2"') }}
    <br>
    {{ lang.Domin}}
    <input type="text" class="form-control" id="url" placeholder="{{ lang.Domin }}" name="domain_search" > 
    <br>
    {{ lang.User}}
    <input type="text" class="form-control" id="url" placeholder="{{ lang.User}}" name="user" > 
    <br>
    <br>
    <button type="submit" id="submit" class="btn btn-secondary">{{ lang.Search }}</button>
    <br>
    <br>
    {{ helper.form.close() }}
    <div class="panel-body">

        <table class="table table-bordered table-striped" id="datatable">
            <thead>
                <tr>
                    <th>{{ lang.license_code }}</th>
                    <th>{{ lang.product_title }}</th>
                    <th>{{ lang.Domin }}</th>
                    <th class="no-sorting">{{ lang.operations }}</th>
                </tr>
            </thead>
            <tbody class="middle-align">

                {% for item in items %}
                    <tr>
                        <td>{{ item.license_code }}</td>
                        <td>{{ item.title }}</td>
                        <td>{{ item.domain }}</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="{{ helper.uri.url('management/brightery_licenses/manage', item.brightery_license_id) }}">{{lang.edit}}</a>
                            <a href="#" class="btn btn-secondary btn-sm delete_msg"  data-url_id="{{ helper.uri.url('management/brightery_licenses/delete' , item.brightery_license_id)}}" data-toggle="modal" data-target="#deleteMsg" style="color:#fff;">{{lang.delete}}</a>
                            <a  class="btn btn-secondary btn-sm "  href="{{ helper.uri.url('management/brightery_invoices/index' , item.brightery_license_id)}}"  style="color:#fff;">{{lang.invoices}}</a>
                        </td>
                    </tr>        
                {% endfor %}
            </tbody>
        </table>
        {{ pagination }}
    </div>
</div>
<div class="modal fade" id="deleteMsg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{{lang.system_msg}}</h4>
            </div>
            <div class="modal-body">
                <a>{{lang.delete_item}}</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">{{ lang.no }}</button>
                <a id="delete_id" class="btn btn-danger" href="url">{{lang.delete}}</a>
            </div>
        </div>
    </div>
</div>