    <section class="contact-section">
        <div class="container">
            <div class="col-md-4">
                <div class="contact-info">
                    <h2>{{lang.contact_info}}</h2>
                    <p>{{lang.you_can_contactus_from_to}}</p>
                    <ul class="information-list">
                        <li><i class="fa fa-map-marker"></i><span>33 Fesal Sidi Bishr , Alexandria Egypt</span></li>
                        <li><i class="fa fa-phone"></i><span>+(20) 115-891-5061</span><span>+(20) 1000-709-113</span></li>
                        <li><i class="fa fa-envelope-o"></i><a href="#">INFO@BRIGHTERY.COM</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                {{ helper.form.open(null,false,false,'role="form" class="comment-form"') }}
                    <h2>{{lang.send_message}}</h2>
                    {{ error }}
                    <div class="row">
                        <div class="col-md-6">
                            <input name="name" id="name" type="text" placeholder="{{lang.name}}" value="{{ helper.form.value('name') }}">
                        </div>
                        <div class="col-md-6">
                            <input name="email" id="email" type="text" placeholder="{{lang.email}}" value="{{ helper.form.value('email') }}">
                        </div>
                    </div>
                    <textarea name="message" id="comment" placeholder="{{lang.message}}"></textarea>
                    <input type="submit" value="{{lang.send_message}}">
                    <div id="msg" class="message"></div>
                {{ helper.form.close() }}
            </div>
        </div>
    </section>
