<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{lang.testimonials}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" id="test" class="form-horizontal"') }}
        {{ error }}<div class="form-group">
            <label class="col-sm-2 control-label" for="client_name">{{lang.client_name}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="client_name" placeholder="{{lang.client_name}}" name="client_name" value="{{ helper.form.value('client_name', item.client_name) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div><div class="form-group">
            <label class="col-sm-2 control-label" for="client_position">{{lang.client_position}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="client_position" placeholder="{{lang.client_position}}" name="client_position" value="{{ helper.form.value('client_position', item.client_position) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div><div class="form-group">
            <label class="col-sm-2 control-label" for="message">{{lang.message}}</label>
            <div class="col-sm-10">
                <input type="textarea" class="form-control" id="message" placeholder="{{lang.message}}" name="message" value="{{ helper.form.value('message', item.message) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="image">{{ lang.image }}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="image" placeholder="{{ lang.image }}" name="image" value="{{ helper.form.value('image', item.image) }}"></div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="clinic_schedule_id">{{ lang.visibility_status }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('visibility_status_id', visibility, helper.form.value('visibility_status_id', item.visibility_status_id), 'class="form-control " id="s2example-1" ') }} 
            </div>
        </div>
        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/testimonials/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
