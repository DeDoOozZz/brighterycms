<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{lang.faqs}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,false,'role="form" id="faq" class="form-horizontal"') }}
        {{ error }}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="question">{{lang.question}}</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="question" placeholder="{{lang.question}}" name="question">{{ helper.form.value('question', item.question) }}</textarea>
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="answer">{{lang.answer}}</label>
            <div class="col-sm-10">
                <textarea  class="form-control" id="answer" placeholder="{{lang.answer}}" name="answer" >{{ helper.form.value('answer', item.answer) }}</textarea>
            </div>
        </div> 

        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="clinic_schedule_id">{{ lang.visibility_status }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('visibility_status_id', visibility, helper.form.value('visibility_status_id', item.visibility_status_id), 'class="form-control " id="s2example-1" ') }} 
            </div>
        </div>

        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/faqs/index') }}" class="btn btn-danger cancel-button">Cancel</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
