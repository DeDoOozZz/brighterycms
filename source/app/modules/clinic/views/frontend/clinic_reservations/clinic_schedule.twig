{%set i = 1 %}
<section class="services-page-section" style="padding-top: 165px !important;">
    <div class="container">
        <div class="row calender-reservation">
            <div class="reservation-header">
                <h2><i class="fa fa-calendar"></i> Dr.{{items.fullname}}</h2>
                <form>
                    <div class="form-group">
                        <label class=" control-label">Select day</label>
                        <div class="date-and-time">
                            <input type="text" id="datepicker" >
                            <i class="fa fa-calendar calendar-date "></i>
                        </div>
                    </div>
                    <script>
                        $(function () {
                            $("#datepicker").datepicker();
                        });
                    </script>
                </form>
            </div>

            {{date}}
            <table>
                <thead>
                    <th class="fc-header">Times</th>
                    {% for item in dates %}
                    <th class="fc-header">{{item.day}} <br><span class="reservation-day">{{item.date}}</span><br>
                    {% for i in item_schedule %}
                        {% if i.day == item.day %}
                            <span class="reservation-day">{{i.from_time}} - {{i.to_time}}</span>
                        {% endif %}
                    {%endfor%}
                    </th>
                    {%endfor%}
                </thead>
                <tbody>
                    {% for final in finals %}
                        <tr>
                            <td class="fc-record times">{{final.time}}</td>
                            {% for itt in final.schedule|cast_to_array %}
                                {% if  not itt.clinic_schedule_id %}
                                    <td class="fc-record vacation last-record"></td>
                                {%elseif itt.status == 'reserved' %}
                                    <td class="fc-record reserved"><i class="fa fa-lock"></i>Reserved</td>
                                {%elseif itt.status == 'except' %}
                                    <td class="fc-record vacation last-record"></td>
                                {%elseif itt.to_time < final.time %}
                                    <td class="fc-record vacation last-record"></td>
                                {%elseif itt.from_time > final.time %}
                                    <td class="fc-record vacation last-record"></td>
                                {%elseif itt.from_time <= final.time and final.time <= itt.to_time %}
                                    <td class="fc-record available" id="id_{{i}}" data-id="id_{{i}}" data-toggle="modal" data-date="{{itt.date}}" data-clinic_schedule_id="{{itt.clinic_schedule_id}}" data-time="{{final.time}}" data-target="#myModal2"><i class="fa fa-unlock"></i> Available</td>
                                    {%set i = i + 1%}
                                {%endif%}
                            {%endfor%}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
