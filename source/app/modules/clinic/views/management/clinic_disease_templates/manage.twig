<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.disease_templates }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="title">{{ lang.title }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" placeholder="{{ lang.title }}" name="title" value="{{ helper.form.value('title', item.title) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="content">{{ lang.content }}</label>
            <div class="col-sm-10">
                <textarea type="text" class="form-control" id="content" placeholder="{{ lang.content }}" name="content"> {{ helper.form.value('content', item.content) }}</textarea>
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="language_id">{{ lang.language_id }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="language_id" placeholder="{{ lang.language_id }}" name="language_id" value="{{ helper.form.value('language_id', item.language_id) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div> 
        
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/clinic_disease_templates/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
