<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.specification }}</h3>
{#        <button class="btn btn-secondary" onclick="goBack()" style="float: right;">{{ lang.back }}</button>#}

        <script>
            function goBack() {
                window.history.back();
            }
        </script>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="specification">{{ lang.name }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="specification" placeholder="{{ lang.specification }}" name="specification" value="{{ helper.form.value('specification', item.specification) }}"> 
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="specification">{{ lang.description }}</label>
            <div class="col-sm-10">
                <textarea type="text" class="form-control" id="description" placeholder="{{ lang.description }}" name="description" >{{ helper.form.value('description', item.description) }}</textarea>
            </div>
        </div>        
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="clinic_branch">{{ lang.branches }}</label>
            <div class="col-sm-10">
                <ul class="icheck-list">
                    {% for branch in branches %}
                    <li class="col-sm-6">
                        <input name="branches[]" tabindex="5" type="checkbox" class="icheck-15" {{ helper.form.checked('branches', branch.clinic_branch_id, helper.form.in_array(branch.clinic_branch_id, selected_branches)) }} value="{{ branch.clinic_branch_id }}">
                        <label for="minimal-checkbox-1-15">{{ branch.clinic_branch }}</label>
                    </li>
                    {% endfor %}
                </ul>

            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">  
                <a href="{{ helper.uri.url('management/clinic_specifications/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function ($)
    {
        // Skins


        $('input.icheck-15').each(function (i, el)
        {
            var self = $(el),
                    label = self.next(),
                    label_text = label.text();

            label.remove();

            self.iCheck({
                checkboxClass: 'icheckbox_line-blue',
                insert: '<div class="icheck_line-icon"></div>' + label_text
            });
        });
    });
</script>
<script src="{{ constant("STYLE_JS") }}/icheck/icheck.min.js"></script>
<link rel="stylesheet" href="{{ constant("STYLE_JS") }}/icheck/skins/all.css">

