<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.clinic_schedule_exceptions }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="clinic_schedule_id">{{ lang.clinic_schedule_id }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('clinic_schedule_id', schedule, helper.form.value('clinic_schedule_id', item.clinic_schedule_id), 'class="form-control " id="s2example-1" ') }} 
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="date">{{ lang.date }}</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type="text" class="form-control datepicker" id="date" placeholder="{{ lang.date }}" name="date" value="{{ helper.form.value('date', item.date) }}" data-format="yyyy-mm-dd"> 
                    <div class="input-group-addon">
                        <i class="linecons-calendar"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="from_time">{{ lang.from_time }}</label>
            <div class="col-sm-10">
                <div class="input-group input-group-minimal">
                    <input type="text" class="form-control timepicker" id="from_time" placeholder="{{ lang.from_time }}" name="from_time" value="{{ helper.form.value('from_time', item.from_time) }}" data-template="dropdown" data-show-seconds="true"  data-show-meridian="true" data-minute-step="5" data-second-step="5" > 
                    <div class="input-group-addon">
                        <i class="linecons-clock"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="to_time">{{ lang.to_time }}</label>
            <div class="col-sm-10">
                <div class="input-group input-group-minimal">
                    <input type="text" class="form-control timepicker" id="to_time" placeholder="{{ lang.to_time }}" name="to_time" value="{{ helper.form.value('to_time', item.to_time) }}" data-template="dropdown" data-show-seconds="true" data-default-time="11:25 AM" data-show-meridian="true" data-minute-step="5" data-second-step="5" > 
                    <div class="input-group-addon">
                        <i class="linecons-clock"></i>
                    </div>
                </div>   
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/clinic_schedule_exceptions/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}
    </div>
</div>
