<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.clinic_doctor_reviews }}</h3>

        <div class="panel-options">
            <a href="{{ helper.uri.url('management/clinic_doctor_reviews/manage') }}" class="btn btn-secondary" style="color: #FFF;">
                {{ lang.add }}
            </a>
        </div>
    </div>
    <div class="panel-body">

        <table class="table table-bordered table-striped" >
            <thead>
                <tr>
                    <th>{{ lang.review }}</th>
                    <th>{{ lang.clinic_patient_id }}</th>
                    <th>{{ lang.clinic_doctor_id }}</th>
                    <th class="no-sorting">{{ lang.operations }}</th>
                </tr>
            </thead>
            <tbody class="middle-align">

                {% for item in items %}
                    <tr>
                        <td>{{ item.review }}</td>
                        <td>{{ item.patient }}</td>
                        <td>{{ item.fullname}}</td>

                        <td>
                            <a class="btn btn-info btn-sm" href="{{ helper.uri.url('management/clinic_doctor_reviews/manage', item.clinic_doctor_review_id ) }}">{{lang.edit}}</a>
                            <a href="#" class="btn btn-danger btn-sm delete_msg"  data-url_id="{{ helper.uri.url('management/clinic_doctor_reviews/delete' , item.clinic_doctor_review_id)}}" data-toggle="modal" data-target="#deleteMsg" style="color:#fff;">{{lang.delete}}</a>
                        </td>
                    </tr>        
                {% endfor %}
            </tbody>
        </table>

        {{pagination}}

    </div>
</div>
<div class="modal fade" id="deleteMsg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{{lang.system_msg}}</h4>
            </div>
            <div class="modal-body">
                <a>{{lang.delete_item}}</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">{{ lang.no }}</button>
                <a id="delete_id" class="btn btn-danger" href="url">{{lang.delete}}</a>
            </div>
        </div>
    </div>
</div>
