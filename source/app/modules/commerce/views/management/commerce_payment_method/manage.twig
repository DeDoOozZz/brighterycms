<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.commerce_payment_method}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }} 
      
        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">{{ lang.name }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="{{ lang.name }}" name="name"
                       value="{{ helper.form.value('name', item.name) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="fees">{{ lang.fees }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="fees" placeholder="{{ lang.fees}}" name="fees"
                       value="{{ helper.form.value('fees', item.fees) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="image">{{ lang.image }}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="image" placeholder="{{ lang.image}}" name="image" >
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="settings">{{ lang.settings }}</label>
            <div class="col-sm-10">
                <textarea  class="form-control" id="settings" placeholder="{{ lang.settings}}" name="settings" >{{ helper.form.value('settings', item.settings) }}</textarea>
            </div>
        </div>
        <div class="form-group-separator"></div>


        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/commerce_categories/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
