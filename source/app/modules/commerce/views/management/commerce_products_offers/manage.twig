<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.commerce_products_offers }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }} 
        <div class="form-group">
            <label class="col-sm-2 control-label" for="parent">{{ lang.commerce_product_id }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('commerce_product_id', products, helper.form.value('commerce_product_id',item.commerce_product_id), 'class="form-control s2example-1" ') }}

            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="title">{{ lang.title }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="title" placeholder="{{ lang.title }}" name="title"
                       value="{{ helper.form.value('title', item.title) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="offer_image">{{ lang.offer_image }}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="offer_image " placeholder="{{ lang.offer_image}}" name="offer_image" >
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/commerce_products_offers/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>

