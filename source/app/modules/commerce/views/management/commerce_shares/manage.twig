<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.commerce_shares }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }} 
        <div class="form-group">
            <label class="col-sm-2 control-label" >{{ lang.user_id }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('user_id', user, helper.form.value('user_id',item.user_id), 'class="form-control s2example-1" ') }}

            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="from_title">{{ lang.from_title }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="from_title " placeholder="{{ lang.from_title}}" name="from_title"
                       value="{{ helper.form.value('from_title', item.from_title) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="from_description">{{ lang.from_description}}</label>
            <div class="col-sm-10">
                <textarea  class="form-control" id="from_description" placeholder="{{lang.from_description}}" name="from_description" >{{ helper.form.value('from_description', item.from_description)}}</textarea>
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="from_image">{{ lang.from_image}}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="from_image " placeholder="{{ lang.from_image}}" name="from_image">
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="to_title">{{ lang.to_title}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="to_title " placeholder="{{ lang.to_title}}" name="to_title"
                       value="{{ helper.form.value('to_title ', item.to_title)}}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="to_description ">{{ lang.to_description }}</label>
            <div class="col-sm-10">
                <textarea  class="form-control" id="to_description" placeholder="{{lang.to_description}}" name="to_description" >{{ helper.form.value('to_description', item.to_description) }}</textarea>
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="to_image">{{ lang.to_image}}</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="to_image " placeholder="{{ lang.to_image}}" name="to_image" >
            </div>
        </div>
        <div class="form-group-separator"></div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label" for="location">{{ lang.location}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="location" placeholder="{{ lang.location}}" name="location"
                       value="{{ helper.form.value('location', item.location)}}">
            </div>
        </div>
        <div class="form-group-separator"></div>



        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/commerce_shares/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
