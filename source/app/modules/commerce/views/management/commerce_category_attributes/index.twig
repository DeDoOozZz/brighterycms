<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.catergory_attributes }}</h3>

        <div class="panel-options">
            <a href="{{ helper.uri.url('management/commerce_category_attributes/manage') }}" class="btn btn-secondary" style="color: #FFF;">
                {{ lang.add }}
            </a>
        </div>
    </div>
    <div class="panel-body">

        <table class="table table-bordered table-striped" id="datatable">
            <thead>
                <tr>
                    <th>{{ lang.name }}</th>
                    <th>{{ lang.category }}</th>
                    <th>{{ lang.operations }}</th>
                </tr>
            </thead>
            <tbody class="middle-align">

                {% for item in items %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>{{ item.title }}</td>
                        <td>
                            <a class="btn btn-info btn-sm"
                               href="{{ helper.uri.url('management/commerce_category_attributes/manage', item.commerce_category_attribute_id ) }}">{{ lang.edit }}</a>
                            <a href="#" class="btn btn-danger btn-sm delete_msg" data-url_id="{{helper.uri.url('management/commerce_category_attributes/delete', item.commerce_category_attribute_id  )}}" data-toggle="modal" data-target="#deleteMsg" style="color:#fff;">{{lang.delete}}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination }}
    </div>
</div>
<div class="modal fade" id="deleteMsg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">{{lang.system_msg}}</h4>
            </div>
            <div class="modal-body">
                <a>{{lang.delete_item}}</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">{{ lang.no }}</button>
                <a id="delete_id" class="btn btn-danger" href="url">{{lang.delete}}</a>
            </div>
        </div>
    </div>
</div>
