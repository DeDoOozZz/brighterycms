<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ lang.catergory_attributes }}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,true,'role="form" class="form-horizontal"') }}
        {{ error }} 
        <div class="form-group">
            <label class="col-sm-2 control-label" for="parent">{{ lang.category }}</label>
            <div class="col-sm-10">
                {{ helper.form.dropdown('commerce_category_id', categories, helper.form.value('commerce_category_id',item.commerce_category_id), 'class="form-control " id="s2example-1" ') }}

            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="title">{{ lang.name }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="{{ lang.name }}" name="name"
                       value="{{ helper.form.value('name', item.name) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>

            <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/commerce_category_attributes/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}

    </div>
</div>
