    {#   $(function () {
           $("#datepicker").datepicker();
       });
   #}
       $(document).ready(function () {
           $(".add-another-option-phone ").click(function () {
               $(".show-phone-option").append('<input name="address" id="address" type="text" placeholder="add another phone" class="form-control">');
           });
           $(".add-another-option-address ").click(function () {
               $(".show-address-option").append('<input name="address" id="address" type="text" placeholder="add another address" class="form-control">');
           });


       });
</script>