<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{lang.links}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,false,'role="form" id="link" class="form-horizontal"') }}
        {{ error }}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">{{lang.name}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="{{lang.name}}" name="name"
                       value="{{ helper.form.value('name', item.name) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="url">{{lang.url}}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="url" placeholder="{{lang.url}}" name="url"
                       value="{{ helper.form.value('url', item.url) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>

      {#  <div class="form-group">
            <label class="col-sm-2 control-label" for="sort">{{ lang.sort }}</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="sort" placeholder="{{lang.sort }}" name="sort"
                       value="{{ helper.form.value('sort', item.sort) }}">
            </div>
        </div>
        <div class="form-group-separator"></div>#}

        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
             <div class="col-sm-10">
                <a href="{{ helper.uri.url('management/links/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}
    </div>
</div>