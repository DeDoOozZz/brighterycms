<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{lang.usergroups}}</h3>
    </div>
    <div class="panel-body">
        {{ helper.form.open(null,false,false,'role="form" method="post" id="usergroup" class="form-horizontal"') }}
        {{ error }}
        <div class="form-group">
            <label class="col-sm-2 control-label" for="field-1">{{ lang.name }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control validate[required]" id="name" placeholder="{{lang.name}}" name="name"
                       value="{{ helper.form.value('name', item.name) }}">
            </div>
        </div>

        <div class="row">
            <!--Management-->
            <div class="col-md-6 col-sm-12 management">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{lang.management}}</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-bordered table-striped" id="example-2">
                            <thead>
                                <tr>
                                    <th class="col-sm-4">{{lang.modules}}</th>
                                    <th class="col-sm-8">{{lang.permissions}}</th>
                                </tr>
                            </thead>
                            <tbody class="middle-align">
                                {% for module,permissions in per_management %}
                                    <tr>
                                        <td>{{ attribute(lang,'module_'~module) }}</td>
                                        <td>
                                            {% for item in permissions %}
                                                <input type="checkbox" name="checkbox[]" value="{{item}}" {%for check in checked%}{%if item == check %} checked {%endif%} {%endfor%}>
                                                <span style="padding-left: 10px;">{{ attribute(lang,'permission_'~item) }}</span>
                                                <br>
                                            {% endfor %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--Frontend-->
            <div class="col-md-6 col-sm-12 frontend">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{lang.frontend}}</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-bordered table-striped" id="example-2">
                            <thead>
                                <tr>
                                    <th class="col-sm-4">{{lang.modules}}</th>
                                    <th class="col-sm-8">{{lang.permissions}}</th>
                                </tr>
                            </thead>
                            <tbody class="middle-align">
                                {% for module,permissions in per_frontend %}
                                    <tr>
                                        <td>{{ attribute(lang,'module_'~module) }}</td>
                                        <td>
                                            {% for item in permissions %}
                                                <input type="checkbox" name="checkbox[]" value="{{ item }}" {%for check in checked%}{%if item == check %} checked {%endif%} {%endfor%}>
                                                <span style="padding-left: 10px;">{{ attribute(lang,'permission_'~item) }}</span>
                                                <br>
                                            {% endfor %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-9">
                <a href="{{ helper.uri.url('management/usergroups/index') }}" class="btn btn-danger cancel-button">{{lang.cancel}}</a>
                <button type="submit" class="btn btn-secondary" style="float: right;">{{lang.submit}}</button>
            </div>
        </div>
        {{ helper.form.close() }}
    </div>
</div>

